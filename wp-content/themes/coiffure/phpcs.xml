<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards - VamTam Gutenberg Blocks">
	<description>WordPress-Core except the buggy sniffs</description>

	<rule ref="WordPress-Core">
		<exclude name="WordPress.Arrays.MultipleStatementAlignment.DoubleArrowNotAligned" />
		<exclude name="WordPress.PHP.YodaConditions" />
	</rule>
	<!-- <rule ref="WordPress-Docs" /> -->
	<rule ref="WordPress-Extra" />

	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/vendor/autoload.php</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/fonts/*</exclude-pattern>
</ruleset>
